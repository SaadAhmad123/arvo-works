{
  "tasks": {
    "start": "deno run -A src/index.ts",
    "dev": "deno run -A --watch src/index.ts",
    "test": "deno test -A --coverage",
    "services": "docker compose up"
  },
  "imports": {
    "@arizeai/openinference-semantic-conventions": "npm:@arizeai/openinference-semantic-conventions@^2.1.7",
    "@arvo-tools/agentic": "npm:@arvo-tools/agentic@^1.2.17",
    "@arvo-tools/concurrent": "npm:@arvo-tools/concurrent@^1.0.3",
    "@opentelemetry/api": "npm:@opentelemetry/api@^1.9.0",
    "@opentelemetry/resources": "npm:@opentelemetry/resources@^1.29.0",
    "@opentelemetry/sdk-node": "npm:@opentelemetry/sdk-node@^0.56.0",
    "@opentelemetry/exporter-trace-otlp-http": "npm:@opentelemetry/exporter-trace-otlp-http@^0.56.0",
    "@opentelemetry/sdk-trace-node": "npm:@opentelemetry/sdk-trace-node@^1.29.0",
    "@opentelemetry/semantic-conventions": "npm:@opentelemetry/semantic-conventions@^1.29.0",
    "@std/dotenv": "jsr:@std/dotenv@^0.225.5",
    "arvo-core": "npm:arvo-core@^3.0.28",
    "arvo-event-handler": "npm:arvo-event-handler@^3.0.28",
    "nocodb-sdk": "npm:nocodb-sdk@^0.265.1",
    "xstate": "npm:xstate@5.24.0",
    "zod": "npm:zod@3.25.76",
    "zod-to-json-schema": "npm:zod-to-json-schema@^3.25.0"
  },
  "fmt": {
    "useTabs": false,
    "lineWidth": 80,
    "indentWidth": 2,
    "semiColons": true,
    "singleQuote": true,
    "proseWrap": "preserve",
    "include": ["**/*.ts"]
  },
  "lint": {
    "rules": {
      "tags": ["recommended"],
      "exclude": ["require-await"]
    }
  }
}